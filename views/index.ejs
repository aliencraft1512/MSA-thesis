  <script type="text/javascript">
      var map;
      var rectangle;
      var infoWindow;
      var $=jQuery.noConflict();

      function initMap() {
          map = new google.maps.Map(document.getElementById('map'), {
              center: {lat: +43.6532, lng: -79.3832},
              zoom: 8
          });

          var bounds={north:44,south:43,east:-79,west:-80};
          rectangle = new google.maps.Rectangle({
              bounds: bounds,
              editable: true,
              draggable: true
          });
          rectangle.setMap(map);
          infoWindow = new google.maps.InfoWindow();
          rectangle.addListener('bounds_changed',()=>{
              var ne;
              var sw;

               ne = rectangle.getBounds().getNorthEast();
               sw = rectangle.getBounds().getSouthWest();

              var contentString = '<b>Rectangle moved.</b><br>' +
                  'New north-east corner: ' + ne.lat() + ', ' + ne.lng() + '<br>' +
                  'New south-west corner: ' + sw.lat() + ', ' + sw.lng();

              // Set the info window's content and position.
              infoWindow.setContent(contentString);
              infoWindow.setPosition(ne);
              infoWindow.open(map);
                //console.log($.ajax);


              $.ajax({// 这地方不能直接html和后台进行交流，必须通过router, AJAX itself is a asynchronous http request,
                  async : false,
                  cache : false,
                  type : 'POST',
                  url:'/Coords', // the path here is like you give the name for the link. specifies the URL to send the request to. Default is the
                  //current page. AND THIS STEP EQUALS TO SEND A REQUEST TO THE PATH '/Coords'
                  datatype:'json',
                  data:{
                      top:ne.lng,
                      right:ne.lat,
                      bottom:sw.lng,
                      left:sw.lat

                  },
                  success:function(data){
                      console.log('success');
                        //$( '#tweets' ).html(data);
                  },
                  error:function(){}
              });


              $.ajax({// 这地方不能直接html和后台进行交流，必须通过router, AJAX itself is a asynchronous http request,
                  async : false,
                  cache : false,
                  type : 'GET',
                  url:'/TweetContent', // the path here is like you give the name for the link. specifies the URL to send the request to. Default is the
                  //current page. AND THIS STEP EQUALS TO SEND A REQUEST TO THE PATH '/Coords'
                  datatype:'json',
                  success:function(data){
                      console.log(data);
                      $( '#tweets' ).html(JSON.stringify(data));
                  },
                  error:function(){}
              });


          });

      }


